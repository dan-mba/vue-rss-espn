{
    "root": true,
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "vue/setup-compiler-macros": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:vue/vue3-essential"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
      "no-console": "off",
      "no-prototype-builtins": "off",
      "vue/multi-word-component-names": "off"
    },
    "ignorePatterns": "docs/**"
}